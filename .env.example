# VerifiAI Protocol Environment Variables
# Copy this file to .env and fill in the values

# ======================
# API Configuration
# ======================
PORT=3001
NODE_ENV=development
API_VERSION=v1

# ======================
# Aptos Configuration
# ======================
APTOS_NETWORK=testnet
APTOS_NODE_URL=https://fullnode.testnet.aptoslabs.com/v1
APTOS_FAUCET_URL=https://faucet.testnet.aptoslabs.com
APTOS_PRIVATE_KEY=your_private_key_here
APTOS_MODULE_ADDRESS=your_module_address_here

# ======================
# Shelby Protocol
# ======================
# Get API key from https://geomi.dev/ (optional for dev - runs in anonymous mode without it)
SHELBY_API_KEY=
SHELBY_API_URL=https://rpc.shelby.xyz
SHELBY_NETWORK=shelbynet

# ======================
# AI Provider (Gemini)
# ======================
GEMINI_API_KEY=your_gemini_api_key
GEMINI_MODEL=gemini-2.0-flash

# ======================
# ZKML Configuration
# ======================
PROOF_ALGORITHM=groth16
ZKML_CIRCUITS_PATH=./circuits
ZKML_PROVING_KEY_PATH=./keys/proving_key.json
ZKML_VERIFICATION_KEY_PATH=./keys/verification_key.json

# ======================
# Security
# ======================
JWT_SECRET=your_jwt_secret_minimum_32_characters
API_KEY_SALT=your_api_key_salt
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ======================
# Database (Optional)
# ======================
DATABASE_URL=postgresql://user:password@localhost:5432/verifiai
REDIS_URL=redis://localhost:6379

# ======================
# Monitoring
# ======================
SENTRY_DSN=
LOG_LEVEL=info
ENABLE_METRICS=true
METRICS_PORT=9090

# ======================
# Feature Flags
# ======================
ENABLE_TEE_PROOFS=false
ENABLE_BULLETPROOFS=true
ENABLE_SWARM_MODE=true
MAX_SWARM_SIZE=10
