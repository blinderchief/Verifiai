# VerifiAI Backend Environment Variables

# Application
APP_NAME=VerifiAI Protocol
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
API_PREFIX=/api

# Server
HOST=0.0.0.0
PORT=8000

# Database - Neon PostgreSQL
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/verifiai
DATABASE_URL_SYNC=postgresql://postgres:password@localhost:5432/verifiai
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_ECHO=false

# Redis - Caching and Pub/Sub
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# Security
SECRET_KEY=your-super-secret-key-change-in-production
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Clerk Authentication
CLERK_PUBLISHABLE_KEY=pk_test_xxxxx
CLERK_SECRET_KEY=sk_test_xxxxx
CLERK_JWKS_URL=https://your-clerk-app.clerk.accounts.dev/.well-known/jwks.json

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000

# Aptos Blockchain
APTOS_NETWORK=testnet
APTOS_NODE_URL=https://fullnode.testnet.aptoslabs.com/v1
APTOS_FAUCET_URL=https://faucet.testnet.aptoslabs.com
APTOS_PRIVATE_KEY=your-aptos-private-key
CONTRACT_ADDRESS=0x1

# Shelby Protocol - Decentralized Storage
SHELBY_API_URL=https://api.shelby.dev
SHELBY_API_KEY=

# Photon Rewards System
PHOTON_API_KEY=
PHOTON_JWT_SECRET=
PHOTON_BASE_URL=https://photon.helius.dev

# AWS S3 (for model/proof storage)
S3_ENDPOINT=
S3_ACCESS_KEY=your-aws-access-key
S3_SECRET_KEY=your-aws-secret-key
S3_BUCKET=verifiai-storage
S3_REGION=us-east-1

# Celery Background Workers
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# Monitoring
SENTRY_DSN=
PROMETHEUS_ENABLED=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
